@using EGuidebook.Shared
@using EGuidebook.Models
@model List<SpotCategoryViewModel>
@{
    Layout = Helper.AdminLayoutPath;
    ViewBag.Title = "Kategorie miejsc";
    ViewBag.IconClass = "fa fa-list";
    ViewBag.MenuItem = Helper.EnumSelectedMenuItem.CATEGORIES;
}

<div class="row">
    <div class="col-md-12">
        <table id="table-categories" class="data-table table table-striped table-bordered" width="100%" cellspacing="0" style="border: 0;">
            <thead>
                <tr>
                    <th style="width: 60%;">Nazwa</th>
                    <th style="width: 20%;">Ikona</th>
                    <th style="width: 20%;"></th>
                </tr>
            </thead>
            <tbody>
                @{ 
                    foreach(SpotCategoryViewModel objSpotCategoryViewModel in Model)
                    {
                        <tr>
                            <td>@objSpotCategoryViewModel.Name</td>
                            <td><img src="@(Helper.CheckIfFileExists(objSpotCategoryViewModel.IconPath) ? objSpotCategoryViewModel.IconPath : Helper.NoPhotoImgPath)" style="height: 24px; width: 24px;"/></td>
                            <td style="text-align: center;">
                                <a href="/SpotCategory/Edit/@objSpotCategoryViewModel.SpotCategoryId" class="btn btn-primary btn-xs">
                                    <i class="fa fa-pencil"></i>&nbsp;Edycja
                                </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
            <tfoot>
                <tr>
                    <th style="width: 60%;">Nazwa</th>
                    <th style="width: 20%;" data-no-filter="true"></th>
                    <th style="width: 20%;" data-no-filter="true"></th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>
<div class="row" style="padding-top: 10px;">
    <div class="col-md-12">
        <a class="btn btn-warning btn-md pull-right" href="/SpotCategory/Create"><i class="fa fa-plus"></i>&nbsp;Nowa kategoria</a>
    </div>
</div>
