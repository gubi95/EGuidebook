@using EGuidebook.Models
@model LoginViewModel
@{
    ViewBag.Title = "Logowanie";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<style>
    html {
        height: 100% !important;
    }
    body {
        height: 100% !important;
        min-height: 100% !important;
        padding: 0 !important;
    }
</style>

<div class="row" style="min-height: 50%; background-color: red;">
    <div class="col-md-12">

    </div>    
</div>
<div class="row" style="min-height: 50%; background-color: blue;">
    <div class="col-md-12" style="padding-top: 20px;">
        <div class="row" style="padding-bottom: 10px;">
            <div class="col-md-12">
                <div style="margin: 0 auto; max-width: 330px;">
                    @Html.LabelFor(x => x.Email, new { @style = "float: left; line-height: 27px;" })
                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @style = "float: right;" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div style="margin: 0 auto; max-width: 330px;">
                    @Html.LabelFor(x => x.Password, new { @style = "float: left; line-height: 27px;" })
                    @Html.PasswordFor(x => x.Password, new { @class = "form-control", @style = "float: right;" })
                </div>
            </div>
        </div>
    </div>
</div>

